/* For tablets */
@media (min-width: 769px) and (max-width: 1024px) {
    .blocks-section .blocks {
        grid-template-columns: repeat(2, 1fr); /* 2 columns on tablet screens */
    }
    
    .blocks-section h1 {
        font-size: 2.2rem;
    }
    
    .blocks-section .subtitle {
        font-size: 1.1rem;
    }
}

/* For desktop */
@media (min-width: 1025px) {
    .blocks-section .blocks {
        grid-template-columns: 1fr 1fr 1fr 1fr; /* 4 columns on desktop */
    }
    
    .blocks-section h1 {
        font-size: 2.5rem;
    }
}

