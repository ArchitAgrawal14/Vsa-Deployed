    margin-bottom: 10px;
}

.blocks-section .block-text p {
    font-size: 0.9rem;
    color: #777;
    line-height: 1.4;
}

/* Larger blocks */
.blocks-section .block.large {
    grid-column: span 1;
}

/* Small blocks in the second column */
.blocks-section .small-column {
    display: grid;
    grid-template-rows: 1fr 1fr;
    gap: 20px;
}

.blocks-section .block.small {
    grid-row: span 1;
    height: 200px;
}

.blocks-section .block.small .block-image {
    width: 100px;
    height: 100px;
}

/* Media Queries for Responsiveness */

/* For small screens (mobile) */
@media (max-width: 768px) {
