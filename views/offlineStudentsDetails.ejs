<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Students Details</title>
</head>
<body>
    <% if (studentDetails && studentDetails.length > 0) { %>
        <% studentDetails.forEach((studDetails) => { %>
            <div class="row featurette mb-5">
                <div class="col-md-7">
                    <h2 class="featurette-heading fw-normal lh-1">
                        <%= studDetails.student_name %> 
                        <span class="text-body-secondary"><%= studDetails.mother_name %></span>
                    </h2>
                    <p class="lead"><%= studDetails.description %></p>
                    
                    <!-- Section to display achievements in points -->
                    <h3 class="mt-4">Achievements:</h3>
                    <ul>
                        <% if (studDetails.achievements && studDetails.achievements.length > 0) { %>
                            <% studDetails.achievements.forEach((achievement) => { %>
                                <li><%= achievement %></li>
                            <% }) %>
                        <% } else { %>
                            <li>No achievements listed.</li>
                        <% } %>
                    </ul>
                </div>
                <div class="col-md-5">
                    <img class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" 
                         src="<%= studDetails.img %>" 
                         alt="500x500" 
                         width="500" 
                         height="500" 
                         style="background-color: var(--bs-secondary-bg); color: var(--bs-secondary-color);" />
                </div>
            </div>
        <% }) %>
    <% } %>
</body>
</html>
